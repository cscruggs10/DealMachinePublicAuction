generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SaleEventStatus {
  UPCOMING
  ACTIVE
  COMPLETED
  CANCELLED
}

enum VehicleStatus {
  DRAFT
  INVENTORY
  ACTIVE
  SOLD
}

model SaleEvent {
  id           String          @id @default(cuid())
  title        String
  startDate    DateTime
  endDate      DateTime
  externalLink String?
  status       SaleEventStatus @default(UPCOMING)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model Vehicle {
  id            String        @id @default(cuid())
  vin           String        @unique
  year          Int
  make          String
  model         String
  trim          String?
  status        VehicleStatus @default(DRAFT)
  aiDisclosures String?       @db.Text
  videoUrl      String?
  price         Decimal?      @db.Decimal(10, 2)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}
